@{
    ViewData["Title"] = "Parent Dashboard";
}

<h2 class="dashboard-title">@ViewData["Title"]</h2>

<div class="dashboard-container">
    <div class="dashboard-card">
        <div class="card-content">
            <h5 class="card-title">View QR Code</h5>
            <p class="card-description">View and download the QR code associated with your child.</p>
            <a href="@Url.Action("ShowQrCode", "QrCode")" class="btn btn-primary">View QR Code</a>
        </div>
    </div>
    <div class="dashboard-card">
        <div class="card-content">
            <h5 class="card-title">View Child's Past Data</h5>
            <p class="card-description">Review the past data associated with your child.</p>
            <a href="@Url.Action("ViewChildData", "Parent")" class="btn btn-primary">View Data</a>
        </div>
    </div>
    <div class="dashboard-card">
        <div class="card-content">
            <h5 class="card-title">Notifications</h5>
            <p class="card-description">Receive real-time updates and notifications about your child's attendance.</p>
            <a href="@Url.Action("Notifications", "Parent")" class="btn btn-primary">View Notifications</a>
        </div>
    </div>
</div>
